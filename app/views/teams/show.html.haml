%p#notice= notice

%p
  %b Captain email:
  = @team.captain_email
%p
  %b Name:
  = @team.name
%p
  %b League:
  = @team.league.name

%p 
  %b Team Members:
  - @team.users.each do |user|
    %p
    = link_to "#{user.name}", users_path(user.name)

- if signed_in? and @team.captain_email == current_user.email
  %p
    %h3 Invite Player
    = form_tag :action => 'invite', :team_id => @team.id do 
      = text_field_tag "to_invite" 
      = submit_tag "Invite Player" 

= link_to 'Edit', edit_league_team_path(@league, @team)
\|
= link_to 'Back', league_teams_path
