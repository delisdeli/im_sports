= form_for [@league, @division, @game] do |f|
  - if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :division
    = f.text_field :division
  .field
    = f.label :team1
    = f.text_field :team1
  .field
    = f.label :team2
    = f.text_field :team2
  .field
    = f.label :score1
    = f.text_field :score1
  .field
    = f.label :score2
    = f.text_field :score2
  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :start_time
    = f.time_select :start_time
  .field
    = f.label :end_time
    = f.time_select :end_time
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :location
    = f.text_field :location
  .actions
    = f.submit 'Save'
