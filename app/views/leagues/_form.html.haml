= form_for @league do |f|
  - if @league.errors.any?
    #error_explanation
      %h2= "#{pluralize(@league.errors.count, "error")} prohibited this league from being saved:"
      %ul
        - @league.errors.full_messages.each do |msg|
          %li= msg

  .field  
    = f.label :name
    = f.text_field :name
    = f.label :sport
    - if @new_sport
      = f.text_field :sport
    - else
      = f.select(:sport, League.sports)
      = link_to "New Sport", new_league_path(new_sport: true)
      
  .actions
    = f.submit 'Create League'
