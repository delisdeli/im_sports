- if @show_notifications
  = link_to (image_tag "icons/notifications_icon.svg"), params.merge(show_notifications: false)
  %div.notifications
    - @recent.each_with_index do |msg, index|
      %p= message_bar_helper(msg, index)
    %p= link_to "View older messages", current_user
- else
  -if current_user.has_new_message
    = link_to (image_tag "icons/unread_notifications_icon.svg"), params.merge(show_notifications: true, user_id: current_user.id)
  -else
    = link_to (image_tag "icons/notifications_icon.svg"), params.merge(show_notifications: true, user_id: current_user.id)
