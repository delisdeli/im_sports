- if @show_notifications
  = link_to (image_tag "icons/notifications_icon.svg"), params.merge(show_notifications: false)
  %div.notifications
    - @recent.each_with_index do |msg, index|
      - if msg.type == "Notification"
        = link_to "#{index+1}: The schedule for your team #{msg.team.name} has changed.", [msg.game.division.league, msg.game.division, msg.game]
      - elsif msg.type == "Invitation"
        = link_to "You have been invited to join team #{msg.team.name}.", current_user
    = link_to "View older messages", current_user
- else
  = link_to (image_tag "icons/notifications_icon.svg"), params.merge(show_notifications: true, user_id: current_user.id), :class => ('new_notification' if current_user.has_new_message)
